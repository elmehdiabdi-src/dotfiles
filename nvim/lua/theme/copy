local Millionaire = {}

function Millionaire.setup()
	vim.cmd('set number')
	vim.cmd('set nowrap')
	vim.cmd('set syntax')
	vim.cmd('set tabstop=6')
	vim.cmd('set shiftwidth=6')
	vim.cmd('set termguicolors')
	vim.cmd('set background=light')

	vim.cmd('let g:colors_name = "devcpp"')

	vim.cmd('hi Normal ctermbg=White ctermfg=Black guifg=Black guibg=White')
	vim.cmd('hi Comment ctermfg=Green guifg=Gray')
	vim.cmd('hi String ctermfg=Blue guifg=Blue')
	vim.cmd('hi Keyword ctermfg=Blue guifg=Purple')
	vim.cmd('hi Number ctermfg=Magenta guifg=Purple')
	vim.cmd('hi Function ctermfg=Red guifg=Black')
	vim.cmd('hi Identifier ctermfg=Red guifg=Red')
	vim.cmd('hi Statement ctermfg=Magenta guifg=Red')
	vim.cmd('hi Type ctermfg=Magenta guifg=Red')
	vim.cmd('hi Special ctermfg=Magenta guifg=Red')
	vim.cmd('hi CursorLine ctermfg=Magenta guifg=Red')
	vim.cmd('hi PreProc ctermfg=LightGray guifg=Red')
end

return Millionaire
